ini ditambahkan dimana?
public function submit_simulation() {
    $customer_id = $this->session->userdata('customer_id');
    if (!$customer_id) {
        return $this->output
                    ->set_status_header(401)
                    ->set_content_type('application/json')
                    ->set_output(json_encode(['status' => 'error', 'message' => 'Unauthorized']));
    }

    $ktp_number    = $this->input->post('ktp_number', true);
    $tanggal_lahir = $this->input->post('tanggal_lahir', true);
    $alamat        = $this->input->post('alamat', true);

    // Ambil data customer
    $customer = $this->db->get_where('customer', ['id' => $customer_id])->row();

    if (!$customer) {
        return $this->output
                    ->set_status_header(404)
                    ->set_content_type('application/json')
                    ->set_output(json_encode(['status' => 'error', 'message' => 'Customer not found']));
    }

    // Cek apakah ada field yang belum terisi di database
    $update_data = [];
    if (empty($customer->tanggal_lahir) && !empty($tanggal_lahir)) {
        $update_data['tanggal_lahir'] = $tanggal_lahir;
    }
    if (empty($customer->alamat) && !empty($alamat)) {
        $update_data['alamat'] = $alamat;
    }

    // Update customer jika ada field kosong
    if (!empty($update_data)) {
        $this->db->where('id', $customer_id)->update('customer', $update_data);
    }

    // Simpan data simulasi (KTP disimpan di sini)
    $simulation_data = [
        'customer_id' => $customer_id,
        'ktp_number'  => $ktp_number,
        'created_at'  => date('Y-m-d H:i:s'),
    ];
    $this->db->insert('simulation', $simulation_data);

    return $this->output
                ->set_content_type('application/json')
                ->set_output(json_encode(['status' => 'ok', 'message' => 'Data berhasil disimpan']));
}

untuk save data saya seperti ini, bagaimana perubahannya agar sesuai dengan logic yg saya ingin kan tadi?
public function save_data()
    {
        // Ambil data customer dari form
        $email = $this->input->post('email');
        $name  = $this->input->post('name');
        $dob   = $this->input->post('dob');
        $address = $this->input->post('address');
        $phone   = $this->input->post('nomor');

        if (!$email) {
            // Jangan lanjut kalau email kosong
            return $this->output
                ->set_status_header(400)
                ->set_content_type('application/json')
                ->set_output(json_encode([
                    'success' => false,
                    'message' => 'Email tidak boleh kosong'
                ]));
        }

        // Cek apakah customer sudah ada
        $existingCustomer = $this->db->get_where('customer', ['email' => $email])->row();

        if ($existingCustomer) {
            // Pakai customer_id yang sudah ada
            $customer_id = $existingCustomer->id;
        } else {
            // Insert customer baru
            $customerData = [
                'name'       => $name,
                'email'      => $email,
                'date_birth' => $dob,
                'address'    => $address,
                'phone'      => $phone,
                'created_at' => date('Y-m-d H:i:s'),
                'updated_at' => date('Y-m-d H:i:s')
            ];

            $this->db->insert('customer', $customerData);
            $customer_id = $this->db->insert_id();
        }

        // Set session login
        $this->session->set_userdata([
            'customer_id' => $customer_id,
            'logged_in'   => true
        ]);

        // Ambil data simulasi dari form
        $simulationData = [
            'customer_id'   => $customer_id,
            'corporate_id'  => 0,
            'ktp_number'    => $this->input->post('nomor_ktp'),
            'category'      => $this->input->post('jenis_kendaraan'),
            'merk'          => $this->input->post('merk_kendaraan'),
            'type'          => $this->input->post('tipe_kendaraan'),
            'year'          => $this->input->post('tahun_kendaraan'),
            'area'          => $this->input->post('region_kendaraan'),
            'otr'           => $this->input->post('harga_kendaraan'),
            'max'           => $this->input->post('max_pinjam'),
            'total_loan'    => $this->input->post('input_pinjam'),
            'loan'          => $this->input->post('angsuran'),
            'tenor'         => $this->input->post('tenor_kend'),
            'date_create'   => date('Y-m-d H:i:s'),
            'date_modified' => date('Y-m-d H:i:s')
        ];

        // Simpan data simulasi
        $saved = $this->db->insert('simulation', $simulationData);
        $simulation_id = $this->db->insert_id();

      
        $category = $this->cache->get('cache_category_api');
        $category = json_decode($category, true);
        $selectedKind = null;
        if (!empty($category) && is_array($category)) {
            foreach ($category as $row) {
                if ($row['id'] == $simulationData['category']) {
                    $selectedKind = $row['kind'];
                    break;
                }
            }
        }
        if ($selectedKind) {
            $exists = $this->db->where('id', $simulationData['category'])
                            ->count_all_results('jenis_kendaraan');
            if ($exists == 0) {
                $this->db->insert('jenis_kendaraan', [
                    'id' => $simulationData['category'],
                    'kind' => $selectedKind
                ]);
            }
        }

       
        $merkCache = $this->cache->get('cache_merk_by_category_api');
        if ($merkCache) {
            $merkCache = json_decode($merkCache, true);
            if (isset($merkCache[$simulationData['category']])) {
                $merkList = $merkCache[$simulationData['category']]['data'];
                foreach ($merkList as $row) {
                    if ($row['brandid'] == $simulationData['merk']) {
                        $exists = $this->db->where('brandid', $row['brandid'])
                                        ->count_all_results('merk');
                        if ($exists == 0) {
                            $this->db->insert('merk', [
                                'brandid' => $row['brandid'],
                                'brandname' => $row['brandname']
                            ]);
                        }
                        break;
                    }
                }
            }
        }

 
        $typeCache = $this->cache->get("cache_type_by_merk_api_{$simulationData['merk']}_{$simulationData['category']}");
        if ($typeCache) {
            $typeCache = json_decode($typeCache, true);
            if (isset($typeCache['data'])) {
                foreach ($typeCache['data'] as $row) {
                    if ($row['modelid'] == $simulationData['type']) {
                        $exists = $this->db->where('modelid', $row['modelid'])
                                        ->count_all_results('tipe');
                        if ($exists == 0) {
                            $this->db->insert('tipe', [
                                'modelid' => $row['modelid'],
                                'modelname' => $row['modelname']
                            ]);
                        }
                        break;
                    }
                }
            }
        }

        $region = $this->cache->get('cache_region_api');
        $region = json_decode($region, true);
        $selectedArea = null;
        if (!empty($region) && is_array($region)) {
            foreach ($region as $row) {
                if ($row['id'] == $simulationData['area']) {
                    $selectedArea = $row['name'];
                    break;
                }
            }
        }
        if ($selectedArea) {
            $exists = $this->db->where('id', $simulationData['area'])
                            ->count_all_results('area');
            if ($exists == 0) {
                $this->db->insert('area', [
                    'id' => $simulationData['area'],
                    'name' => $selectedArea
                ]);
            }
        }

        // ===========================
        // Response JSON
        // ===========================
        if ($saved) {
            return $this->output
                ->set_content_type('application/json')
                ->set_output(json_encode([
                    'success'       => true,
                    'simulation_id' => $simulation_id,
                    'customer_id'   => $customer_id,
                    'message'       => 'Data berhasil disimpan'
                ]));
        } else {
            return $this->output
                ->set_status_header(500)
                ->set_content_type('application/json')
                ->set_output(json_encode([
                    'success' => false,
                    'message' => 'Database error'
                ]));
        }
    }



